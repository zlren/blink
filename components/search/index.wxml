<!-- components/search/index.wxml -->
<view class="container">
  <view class="header">
    <view class="search-container">
      <image class="icon" src="images/search.png" />
      <!-- auto-focus 自动聚焦，光标自动停留在输入框里 -->
      <input bind:confirm="onConfirm" value="{{inputValue}}" placeholder-class='in-bar' placeholder='书籍名' class='bar' auto-focus="true" />
      <image bind:tap="onDelete" class="cancel-img" src="images/cancel.png" />
    </view>
    <view class='cancel' bind:tap="onCancel">取消</view>
  </view>
  <view wx:if="{{!searching}}">
    <view class="history">
      <view class="title">
        <view class="chunk"></view>
        <text>历史搜索</text>
      </view>
      <view class="tags">
        <block wx:for="{{historyWords}}">
          <v-tag text="{{item}}" bind:tapping="onConfirm" />
        </block>
      </view>
    </view>
    <view class="history hot-search">
      <view class="title">
        <view class="chunk"></view>
        <text>热门搜索</text>
      </view>
      <view class="tags">
        <block wx:for="{{hotWords}}">
          <v-tag text="{{item}}" bind:tapping="onConfirm" />
        </block>
      </view>
    </view>
  </view>
  <view wx:if="{{searching}}" class="books-container">
    <block wx:for="{{dataArray}}" wx:key="{{item.id}}">
      <v-book book="{{item}}" class="book" />
    </block>
  </view>
</view>